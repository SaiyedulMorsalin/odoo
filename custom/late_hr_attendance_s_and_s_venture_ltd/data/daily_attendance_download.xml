<odoo>
    <data noupdate="1">
        <record id="ir_cron_generate_daily_attendance" model="ir.cron">
            <field name="name">Generate Daily Attendance</field>
            <field name="model_id" ref="model_attendance_daily"/>
            <field name="state">code</field>
            <field name="code">model.generate_daily_attendance()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field> <!-- or 'days' -->
            <field name="active">True</field>
        </record>
    </data>
</odoo>
